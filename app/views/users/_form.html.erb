<%= form_with model: @user, local: true do |f| %>
  <%= render 'shared/error_messages' %>

  <%= f.label :fullname, 'Full Name', class: 'form-label' %>
  <%= f.text_field :fullname, class: 'form-control' %>

  <%= f.label :username, class: 'form-label' %>
  <%= f.text_field :username, class: 'form-control' %>

  <%= f.label :photo, 'Profile Photo', class: 'form-label' %>
  <%= f.file_field :photo, accept: "image/jpeg,image/gif,image/png", class: 'form-control' %>

  <%= f.label :coverimage, 'Cover Image', class: 'form-label' %>
  <%= f.file_field :coverimage, accept: "image/jpeg,image/gif,image/png", class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "btn" %>
<% end %>
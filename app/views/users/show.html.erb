<div class='twitter-ish row'>
  <%= render 'left_menu' %>
  <section class='main col-10 p-0'>
    <%= render 'top_nav' %>
    <div class="twitter-ish row">

      <section class='timeline col-9 p-0'>
        <div class='cover-image'>
          <%= cover_image_for(@user) %>
        </div>
        <ul class='tab p-0'>
          <li class="tab-link m-0"><%= link_to 'Tweets', '#' %></li>
          <li class="tab-link m-0"><%= link_to 'Following', '#' %></li>
          <li class="tab-link m-0"><%= link_to 'Followers', '#' %></li>
        </ul>
        <div class='tweets'>
          <ul class="wrap-tweets">
            <li class="index">All Tweets</li>
          </ul>
        </div>
      </section>

      <section class='suggested col-3 p-0'>
        <div class='wrap-profile'>
          <div class="profile-info">
            <%= avatar_for(@user) %>
            <p><%= @user.fullname %></p>
            <p>@<%= @user.username %></p>
          </div>
          <div class="profile-stats row">
            <a href="#" class="stat"> <strong> 1200 </strong>Tweets</a>
            <a href="#" class="stat"> <strong id="following"> 100 </strong>Following</a>
            <a href="#" class="stat"> <strong id="followers"> 1000 </strong>Followers </a>
          </div>
        </div>
        <ul class='wrap-handles'>
            <li class='followers'>Followed by</li>
            <li class='handle'>
              <%= avatar_for(@user) %>
              <div>
                <p class="name"><%= @user.fullname %></p>
                <p class="username">@<%= @user.username %></p>
              </div>
              <%= link_to image_tag('add.png', class: 'btn-icon'), '#' %>
            </li>
        </ul>
      </section>

    </div>
  </section>
</div>
